{
  "compilerOptions": {
    "target": "es6",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",
    "module": "commonjs",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "allowJs":true,
    "experimentalDecorators": true,
    "declaration": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["dist", "node_modules", "**/*.js"]
}
